<html>
<head>
    <title>Edit Lead</title>
    <# include "_authentication_user.espx" #>

    <script src="/js/commonResource.js"></script>
    <script src="/js/moment.min.js"></script>

    <style type="text/css">
        .marginBottom10 {
            margin-bottom: 10px;
        }

        .customInputForAddress {
            margin-bottom: 10px;
        }

        .customNavBar {
            border-radius: 0px;
            margin-bottom: 0px;
        }

        .elementActive {

            background: #008AD5;
            color: #fff;
        }

        .autoComplete {
            z-index: 100;
            position: absolute;
            background: #fff;
            width: 100%;
            border: solid;
            border-width: 1;
            border-radius: 6px;
            border-color: #BDC3C7;
        }
    </style>

    <script type="text/javascript">


        function onContactClick(event, name, id) {

            // $(event.target).removeClass("elementActive");
            $("#dummy-contact-id-input").val(id);
             $("#contact-auto-complete").val(name);
            $("#contact-auto-complete-div").css("display", "none");
        }

        function onContactAutoCompleteChange(event) {

           var search = $('#contact-auto-complete').val();

           autoCompleteChanged(search, "contact-auto-complete-div", "/contacts/_contact_auto_complete_data", event.keyCode);

        }

        function onAccountClick(event, name, id) {

            // $(event.target).removeClass("elementActive");
            $("#dummy-account-id-input").val(id);
            $("#account-auto-complete").val(name);
            $("#account-auto-complete-div").css("display", "none");
        }

        function onAccountAutoCompleteChange(event) {

           var search = $('#account-auto-complete').val();

           autoCompleteChanged(search, "account-auto-complete-div", "/accounts/_account_auto_complete_data", event.keyCode);

        }

        $(document).ready(function() {

            if("<#[url.id]#>" != "") {

                /* set selected contact and client if edit view*/
                $.get("/leads/_get_lead_contact_by_id?id=" + "<#[url.id]#>", function(data, status) {

                data = data.trim();
                $('#contact-auto-complete').val(data);
                });

                $.get("/leads/_get_lead_account_by_id?id=" + "<#[url.id]#>", function(data, status) {

                    data = data.trim();
                    $('#account-auto-complete').val(data);

                });
            }

        });

    </script>

</head>

<body>

<div>
    <# include "easeCRMHeader.espx"; #>

</div>




<div style="width: 800px;margin: 0 auto">
<h3>Edit Lead</h3>


<# apply  easeCRMLeads.<#[url.id]#> as "easecrmleadobj"; #>

 <# start list for easeCRMIndustries;
    sort by name;
    save to industry.options;
#>

<# start row #>
    <option value="<# uuid #>" <# if("<# [easecrmleadobj.industry]#>"=="<# uuid#>" ) {print "selected='selected'";} #> ><# name as html #></option>
<# end row #>
<# end list #>



<# start list for easeCRMSources;
    sort by name;
    save to source.options;
#>

<# start row #>
    <option value="<# uuid #>" <# if("<# [easecrmleadobj.source]#>"=="<# uuid#>" ) {print "selected='selected'";} #> ><# name as html #></option>
<# end row #>
<# end list #>


<# start list for easeCRMProducts;
    sort by name;
    save to product.options;
#>

<# start row #>
    <option value="<# uuid #>"  <# if("<# [easecrmleadobj.product]#>"=="<# uuid#>" ) {print "selected='selected'";} #> ><# name as html #></option>
<# end row #>
<# end list #>


<# start list for easeCRMStages;
    sort by name;
    save to stage.options;
#>

<# start row #>
    <option value="<# uuid #>" <# if("<# [easecrmleadobj.stage]#>"=="<# uuid#>" ) {print "selected='selected'";} #> ><# name as html #></option>
<# end row #>
<# end list #>


<# start list for easeUsers;
    sort by fname;
    save to assignedTo.options;
#>

<# start row #>
    <option value="<# uuid #>" <# if("<# [easecrmleadobj.assignedto]#>"=="<# uuid#>" ) {print "selected='selected'";} #> ><# fname as html #> <# lname as html #></option>

<# end row #>
<# end list #>


<# start list for easetagsentities;
    relate easetagsentities.tagid to easetags.uuid;
    include when entityid=="<# [url.id] #>" and moduleid=="3";
    save to tags.value;
#>

<# start row #>
    <#easetags.name#> ,
<# end row #>
<# end list #>


<#
    if("<# [url.redirectUrl]#>" == "2"){
        set redirectVal to "/leads/details?id=<# [url.id]#>";
    }else{
        set redirectVal to "/leads";
    }
#>


<form method="POST" action="_edit_lead?id=<#[url.id]#>&redirectUrl=<# [redirectVal]#>" style="margin-bottom: 0px">
    <div class="row">
        <div class="form-group col-lg-12">
            <label class="control-label">Title:</label>

            <div>
                <input type="text" name="title" class="form-control" required placeholder="Title" value="<# [easecrmleadobj.title as html] #>"/>
            </div>
        </div>

    </div>

    <div class="row">

         <div class="form-group col-lg-6">
            <label class=" control-label">Contact </label>

            <div class="">
                <input id="contact-auto-complete" onkeyup="onContactAutoCompleteChange(event)" type="text" class="form-control" autocomplete="off" placeholder="Select Contact" required <#[contact.value]#>/>

                <input id="dummy-contact-id-input"  name="contact" type="hidden" placeholder="Select Contact" required  value="<# [easecrmleadobj.contact as html] #>" />

            </div>

            <div id="contact-auto-complete-div"
                 class="autoComplete" style="width: 384px;border-top: 0;display:none;">

            </div>
        </div>

        <div class="form-group col-lg-6">
            <label class=" control-label">Account: </label>


            <div class="">
                <input id="account-auto-complete" onkeyup="onAccountAutoCompleteChange(event)" type="text" class="form-control" autocomplete="off" placeholder="Select Account" required />

                <input id="dummy-account-id-input" name="account" type="hidden"  required value="<# [easecrmleadobj.account as html] #>" />

            </div>

            <div id="account-auto-complete-div"
                 class="autoComplete" style="width: 384px;border-top: 0;display:none;">
            </div>
        </div>

    </div>

    <div class="row">

         <div class="form-group col-lg-4">
            <label class=" control-label">Expected Date: </label>

            <div class="">
                <input type="date" class="form-control" name="expecteddate" placeholder="Expected Date" id="expectedDate"/>
                <script >
                (function(){
                    $('#expectedDate').val(moment("<# [easecrmleadobj.expecteddate]#>",'YYYY-MM-DD hh:mm:ss').format('YYYY-MM-DD'));
                })();
                </script>
            </div>
        </div>

        <div class="form-group col-lg-4">
            <label class=" control-label">  Amount: </label>

            <div class="">
                <input type="number" class="form-control" name="amount" placeholder="Amount"  value="<# [easecrmleadobj.amount as number] #>" />
            </div>
        </div>

        <div class="form-group col-lg-4">
            <label class="control-label">Confidence Level</label>

            <div class="">
                <input type="number" class="form-control" name="confidencelevel" placeholder="Confidence Level" value="<# [easecrmleadobj.confidencelevel as number] #>"/>
            </div>
        </div>

    </div>



    <div class="row">
        <div class="form-group col-lg-4">
            <label class="  control-label">Product: </label>

            <div class="">

                <select class="form-control marginBottom10" name="product">
                   <option > Select Product</option>
                    <#[product.options] #>
                </select>
            </div>
        </div>

        <div class="form-group col-lg-4">
            <label class="control-label">Industry: </label>

            <div class="">
                <select class="form-control marginBottom10" name="industry">

                    <#[industry.options]#>
                </select>
            </div>
        </div>

        <div class="form-group col-lg-4">
            <label class=" control-label">Source: </label>

            <div class="">
                <select class="form-control marginBottom10" name="source">

                    <#[source.options]#>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label class=" control-label">Stage: </label>

            <div class="">
                <select class="form-control marginBottom10" name="stage">

                    <#[stage.options]#>
                </select>

            </div>
        </div>

        <div class="form-group col-lg-6">
            <label class=" control-label">Assign To: </label>

            <div class="">
                <select class="form-control marginBottom10" id="assignedTo" name="assignedto">

                    <#[assignedTo.options]#>
                </select>

                </div>
        </div>




    </div>


     <div class="row">
        <div class="form-group col-lg-12" >
                    <label class=" control-label">Tags: </label>

                    <div style="height: 45px">
                         <input id="tagsinput" class="tagsinput"  style="display: none;" value="<# [tags.value]#>"
                         name="tags"/>
                    </div>
                </div>


    </div>
<div class="row demo-row ">


            <div class="col-lg-4">
                <input type="submit" class="btn btn-block btn-lg btn-primary" value="Update" />
            </div>

        </div>
    </form>

</div>


</body>
</html>